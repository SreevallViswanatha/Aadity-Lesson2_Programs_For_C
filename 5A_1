#include <stdio.h>
#include <stdlib.h>
//WAP to accept month, and number of the year and display number of days in the month.
int main()
{
    int m, y;
    printf("Enter the year:");
    scanf("%d", &y);
    printf("Enter the number of the month:");
    scanf("%d", &m);
    if(m==1)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==2)
    {
        if(y%400==0)
        {
            printf("The number of days inside the month is 29 days.");
        }
        else if(y%100==0)
        {
            printf("The number of days inside the month is 28 days.");
        }
        else if(y%4==0)
        {
            printf("The number of days inside the month is 29 days.");
        }
        else
        {
            printf("The number of days inside the month is 28 days.");
        }
    }
    if(m==3)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==4)
    {
        printf("The number of days inside the month is 30 days.");
    }
    if(m==5)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==6)
    {
        printf("The number of days inside the month is 30 days.");
    }
    if(m==7)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==8)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==9)
    {
        printf("The number of days inside the month is 30 days.");
    }
    if(m==10)
    {
        printf("The number of days inside the month is 31 days.");
    }
    if(m==11)
    {
        printf("The number of days inside the month is 30 days.");
    }
    if(m==12)
    {
        printf("The number of days inside the month is 31 days.");
    }
}
