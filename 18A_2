#include <stdio.h>
#include <stdlib.h>
//Ask the user to enter either 1 or 2.
//If the user enters 1 print "You would go to heaven."
//If the user enters 2 print "Hell was created with you in mind."
//If the user enters any other number other than 1 or 2, print "How about mother earth."
int main()
{
    int number;
    printf("Enter a number:");
    scanf("%d", &number);
    (number==1)?printf("You would go to heaven."):(number==2)?printf("Hell was created with you in mind."):printf("How about mother earth.");
}
