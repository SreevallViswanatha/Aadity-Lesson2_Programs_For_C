#include <stdio.h>
#include <stdlib.h>
//Take three numbers from the user and display the smallest.
int main()
{
    int n, n1, n2;
    printf("Enter a number:");
    scanf("%d", &n);
    printf("Enter another number:");
    scanf("%d", &n1);
    printf("Enter another number:");
    scanf("%d", &n2);
    (((n<n1)&&(n1<n2))||((n<n2)&&(n2<n1)))?printf("The smallest number is %d.", n):(((n2<n1)&&(n1<n))||((n2<n)&&(n<n1)))?printf("The smallest number is %d.", n2):printf("The smallest number is %d.", n1);
}
