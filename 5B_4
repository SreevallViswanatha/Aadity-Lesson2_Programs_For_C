#include <stdio.h>
#include <stdlib.h>
//WAP to accept the age of a candidate and citizenship status from the user and determine whether the candidate is eligible for casting vote. Any person who is a citizen and whose age is above 18 are eligible to cast a vote.
int main()
{
    int a, c ;
    printf("Enter the age of a person:");
    scanf("%d", &a);
    printf("Enter the citizenship status of a person(enter 1 for yes and 0 for no):");
    scanf("%d", &c);
    if((a>=18)&&(c==1))
    {
        printf("The person is eligible for voting.");
    }
    else
    {
        printf("The person is not eligible for voting.");
    }
}
