#include <stdio.h>
#include <stdlib.h>
//WAP to check whether a given number is positive or negative.
int main()
{
    int a;
    printf("Enter a number:");
    scanf("%d", &a);
    if(a>0)
    {
        printf("The number is positive.");
    }
    else if(a==0)
    {
        printf("The number is neither positive or negative.");
    }
    else
    {
        printf("The number is negative.");
    }
}
