#include <stdio.h>
#include <stdlib.h>
//WAP that receives month and date of birth as input and prints the corresponding Zodiac sign based on the following table:
//Sun Sign	From - To
//Capricorn	Dec 22 – Jan 19
//Aquarius	Jan 20 – Feb 17
//Pisces	Feb 18 – Mar 19
//Aries	    Mar 20 – April 19
//Taurus	April 20 – May 20
//Gemini	May 21 – June 20
//Cancer	June 21 – July 22
//Leo	    July 23 – August 22
//Virgo	    Aug 23 – Sept 22
//Libra	    Sept 23 – Oct 22
//Scorpio	Oct 23 – Nov 21
//Sagittarius Nov 22 – Dec 21
int main()
{
    int month, day;
    printf("Enter the month the person was born in(Enter 1 for January, 2 for February, 3 for March, and so on):");
    scanf("%d", &month);
    printf("Enter the day the person was born:");
    scanf("%d", &day);
    if(((month==12)&&(day>=22))||((month==1)&&(day<=19)))
    {
        printf("The sun sign is Capricorn.");
    }
    else if(((month==1)&&(day>=20))||((month==2)&&(day<=17)))
    {
        printf("The sun sign is Aquarius.");
    }
    else if(((month==2)&&(day>=18))||((month==3)&&(day<=19)))
    {
        printf("The sun sign is Pisces.");
    }
    else if(((month==3)&&(day>=20))||((month==4)&&(day<=19)))
    {
        printf("The sun sign is Aries.");
    }
    else if(((month==4)&&(day>=20))||((month==5)&&(day<=20)))
    {
        printf("The sun sign is Taurus.");
    }
    else if(((month==5)&&(day>=21))||((month==6)&&(day<=20)))
    {
        printf("The sun sign is Gemini.");
    }
    else if(((month==6)&&(day>=21))||((month==7)&&(day<=22)))
    {
        printf("The sun sign is Cancer.");
    }
    else if(((month==7)&&(day>=23))||((month==8)&&(day<=22)))
    {
        printf("The sun sign is Leo.");
    }
    else if(((month==8)&&(day>=23))||((month==9)&&(day<=22)))
    {
        printf("The sun sign is Virgo.");
    }
    else if(((month==9)&&(day>=23))||((month==10)&&(day<=22)))
    {
        printf("The sun sign is Libra.");
    }
    else if(((month==10)&&(day>=23))||((month==11)&&(day<=21)))
    {
        printf("The sun sign is Scorpio.");
    }
    else if(((month==11)&&(day>=22))||((month==12)&&(day<=21)))
    {
        printf("The sun sign is Sagittarius.");
    }
    else
    {
        printf("Wrong inputs.");
    }
}
