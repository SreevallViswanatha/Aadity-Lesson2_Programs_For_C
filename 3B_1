#include <stdio.h>
#include <stdlib.h>
//Given a point (x, y), write a program to find out if it lies on the x-axis, y-axis or on the origin.
int main()
{
    int x, y;
    printf("Enter the first coordinate:");
    scanf("%d", &x);
    printf("Enter the second coordinate:");
    scanf("%d", &y);
    if(x==0&&y!=0)
    {
        printf("The coordinates are on the y-axis.");
    }
    else if(x!=0&&y==0)
    {
        printf("The coordinates are on the x-axis.");
    }
    else if(x==0&&y==0)
    {
        printf("The coordinates are on the origin.");
    }
    else
    {
        printf("The coordinates are not on the x-axis, y-axis, and the origin.");
    }
}
