#include <stdio.h>
#include <stdlib.h>
//Take three numbers from the user and display the smallest.
int main()
{
    int n, n1, n2;
    printf("Enter a number:");
    scanf("%d", &n);
    printf("Enter another number:");
    scanf("%d", &n1);
    printf("Enter another number:");
    scanf("%d", &n2);
    if(n<n2&&n2<n1)
    {
        printf("The smallest number is %d.", n);
    }
    else if(n<n1&&n1<n2)
    {
        printf("The smallest number is %d.", n);
    }
    else if(n2<n1&&n1<n)
    {
        printf("The smallest number is %d.", n2);
    }
    else if(n1<n&&n<n2)
    {
        printf("The smallest number is %d.", n1);
    }
    else if(n2<n&&n<n1)
    {
        printf("The smallest number is %d.", n2);
    }
    else
    {
        printf("The smallest number is %d.", n1);
    }
}

